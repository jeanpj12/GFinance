{
  "name": "GFinance",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "deploy": "git pull && npm i && cd apps/api && npx prisma migrate deploy && cd ../.. && npm run build && pm2 restart gfinance-back && pm2 restart gfinance-front"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "prettier": "^3.5.0",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*",
    "config/*"
  ],
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.4",
    "radix-ui": "^1.3.4"
  }
}
